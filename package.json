{
  "name": "vigour-facebook",
  "version": "1.1.4",
  "description": "facebook for vigorous apps!",
  "main": "lib/index.js",
  "scripts": {
    "test": "gaston test -r browser -s test/browser/index.js",
    "build": "cd example && gaston build -s index.js -o ./ -i && pwd",
    "ios-test": "cd test && gaston bundle -t -s manual/index.js -o . -i && wrapper build --native.selectedPlatforms ios",
    "ios": "npm run build && wrapper build --native.selectedPlatforms ios",
    "android-test": "cd test && gaston bundle -t -s manual/index.js -o . -i && wrapper build --native.selectedPlatforms android",
    "durp": "cd example ; pwd",
    "wex": "npm run durp ; pwd ; wrapper build --native.selectedPlatforms android",
    "android": "npm run build && pwd && npm run wrap-android",
    "wrap-android": "wrapper build --native.selectedPlatforms android",
    "all": "npm run build && wrapper build",
    "tizentv": "npm run build && wrapper build --native.selectedPlatforms tizentv",
    "postinstall": "./makelinks.sh vigour-facebook"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vigour-io/facebook.git"
  },
  "keywords": [
    "vigour",
    "wrapper",
    "native",
    "plugin",
    "facebook"
  ],
  "author": "Vigour",
  "contributors": [
    "Shawn Inder <shawn@vigour.io>",
    "Marcus Besjes <marcus@vigour.io>",
    "Michiel Van Liempt <michiel@vigour.io>",
    "Alexander van de Werff <alex@vigour.io>"
  ],
  "bugs": {
    "url": "https://github.com/vigour-io/facebook/issues"
  },
  "homepage": "https://github.com/vigour-io/facebook",
  "engines": {
    "node": ">=4.1.2"
  },
  "dependencies": {
    "lodash": "3.10.x",
    "vigour-config": "~0.0.8",
    "vigour-env": "~1.0.19",
    "vigour-js": "~0.4.4",
    "vigour-ua": "~0.0.5",
    "vigour-wrapper": "~2.2.13"
  },
  "devDependencies": {
    "gaston": "^0.28.2",
    "npmlog": "^2.0.0",
    "vigour-element": "~0.2.4"
  },
  "license": "MIT",
  "vigour": {
    "native": {
      "platforms": {
        "ios": {
          "productName": "Facebook Example",
          "organizationName": "Vigour",
          "organizationIdentifier": "io.vigour.facebook",
          "buildNumber": "1",
          "appIndexPath": "build.html",
          "NSAllowsArbitraryLoads": true,
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true
          }
        },
        "android": {
          "productName": "Facebook Example",
          "applicationId": "io.vigour.facebook",
          "appIndexPath": "build.html",
          "keystoreFile": "example.keystore",
          "keystorePassword": "shmexample",
          "keystoreAlias": "blabla",
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true
          }
        }
      }
    },
    "plugin": {
      "android": {
        "className": "io.vigour.plugin.facebook.FacebookPlugin",
        "instantiation": "new FacebookPlugin(this)",
        "metadata": {
          "android:name": "com.facebook.sdk.ApplicationId",
          "android:value": "@string/facebook_app_id"
        },
        "activity": {
          "android:name": "com.facebook.FacebookActivity",
          "android:configChanges": "keyboard|keyboardHidden|screenLayout|screenSize|orientation",
          "android:theme": "@android:style/Theme.Translucent.NoTitleBar",
          "android:label": "@string/app_name"
        },
        "strings": {
          "facebook_app_id": "441539296031991"
        }
      }
    }
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "expect",
      "before",
      "after",
      "beforeEach",
      "afterEach",
      "sinon",
      "FB"
    ]
  }
}
