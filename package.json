{
  "name": "vigour-facebook",
  "version": "1.0.3",
  "description": "facebook for vigorous apps!",
  "main": "lib/index.js",
  "scripts": {
    "test": "./node_modules/.bin/gaston test -r browser",
    "build": "cd example && npm run build",
    "build-test": "./node_modules/.bin/gaston bundle -t -s test/browser/index.js -o test/browser/ -i",
    "build-test-manual": "./node_modules/.bin/gaston bundle -t -s test/manual/index.js -o test/manual/ -i",
    "build-all": "npm run build && npm run build-test && npm run build-test-manual",

    "ios": "cd example && npm run ios",
    "ios-test": "npm run build-test && wrapper build --native.selectedPlatforms ios",
    "ios-test-manual": "npm run build-test-manual && wrapper build --native.selectedPlatforms ios",
    "ios-all": "npm run ios && npm run ios-test && npm run ios-test-manual",

    "android": "cd example && npm run android",
    "android-test": "npm run build-test && wrapper build --native.selectedPlatforms android",
    "android-test-manual": "npm run build-test-manual && wrapper build --native.selectedPlatforms android",
    "android-all": "npm run android && npm run android-test && npm run android-test-manual",

    "all": "cd example && npm run all",
    "all-test": "npm run build-test && wrapper build",
    "all-test-manual": "npm run build-test-manual && wrapper build",
    "all-all": "npm run all && npm run all-test && npm run all-test-manual"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vigour-io/facebook.git"
  },
  "keywords": [
    "vigour",
    "wrapper",
    "native",
    "plugin",
    "facebook"
  ],
  "author": "Vigour",
  "contributors": [
    "Shawn Inder <shawn@vigour.io>",
    "Marcus Besjes <marcus@vigour.io>",
    "Michiel Van Liempt <michiel@vigour.io>",
    "Alexander van de Werff <alex@vigour.io>"
  ],
  "bugs": {
    "url": "https://github.com/vigour-io/facebook/issues"
  },
  "homepage": "https://github.com/vigour-io/facebook",
  "engines": {
    "node": ">=4.1.2"
  },
  "dependencies": {
    "lodash": "3.10.x",
    "vigour-config": "~0.0.6",
    "vigour-js": "~0.3.0",
    "vigour-ua": "0.0.x",
    "vigour-wrapper": "~2.0.7"
  },
  "devDependencies": {
    "vigour-element": "*",
    "gaston": "0.27.1"
  },
  "license": "MIT",
  "vigour": {
    "plugin": {
      "scope": "public_profile,email",
      "web": {
        "version": "v2.5",
        "src": "//connect.facebook.net/en_NL/sdk.js",
        "xfbml": true
      },
      "android": {
        "className": "io.vigour.plugin.facebook.FacebookPlugin",
        "instantiation": "new FacebookPlugin(this)",
        "metadata": {
          "android:name": "com.facebook.sdk.ApplicationId",
          "android:value": "@string/facebook_app_id"
        },
        "activity": {
          "android:name": "com.facebook.FacebookActivity",
          "android:configChanges": "keyboard|keyboardHidden|screenLayout|screenSize|orientation",
          "android:theme": "@android:style/Theme.Translucent.NoTitleBar",
          "android:label": "@string/app_name"
        },
        "strings": {
          "facebook_app_id": "fill in facebook key here"
        }
      }
    },
    "native": {
      "debug": true,
      "platforms": {
        "ios": {
          "productName": "Facebook Tests",
          "organizationName": "Vigour",
          "organizationIdentifier": "io.vigour.facebook",
          "buildNumber": "1",
          "appIndexPath": "build.html",
          "NSAllowsArbitraryLoads": true,
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true,
            "mocha.js": true,
            "mocha.css": true
          }
        },
        "android": {
          "debug": true,
          "run": true,
          "productName": "Facebook Tests",
          "applicationId": "io.vigour.facebook",
          "appIndexPath": "build.html",
          "keystoreFile": "example.keystore",
          "keystorePassword": "shmexample",
          "keystoreAlias": "blabla",
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true,
            "mocha.js": true,
            "mocha.css": true
          }
        }
      }
    }
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "expect",
      "before",
      "after",
      "beforeEach",
      "afterEach",
      "sinon",
      "FB"
    ]
  }
}
