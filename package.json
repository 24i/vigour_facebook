{
  "name": "vigour-facebook",
  "version": "1.0.2",
  "description": "facebook for vigorous apps!",
  "main": "lib/index.js",
  "scripts": {
    "start": "gaston",
    "test": "gaston test -r browser",
    "build": "gaston build -s ./example/index.js -o ./ -i",
    "ios": "npm run build && wrapper build --native.selectedPlatforms ios",
    "android": "npm run build && wrapper build --native.selectedPlatforms android",
    "all": "npm run build && wrapper build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vigour-io/facebook.git"
  },
  "keywords": [
    "vigour",
    "wrapper",
    "native",
    "plugin",
    "facebook"
  ],
  "author": "Vigour",
  "contributors": [
    "Shawn Inder <shawn@vigour.io>",
    "Marcus Besjes <marcus@vigour.io>",
    "Michiel Van Liempt <michiel@vigour.io>",
    "Alexander van de Werff <alex@vigour.io>"
  ],
  "bugs": {
    "url": "https://github.com/vigour-io/facebook/issues"
  },
  "homepage": "https://github.com/vigour-io/facebook",
  "engines": {
    "node": ">=4.1.2"
  },
  "dependencies": {
    "vigour-ua": "0.0.1",
    "vigour-wrapper": "*",
    "vigour-js": "*"
  },
  "devDependencies": {
    "vigour-element": "*"
  },
  "license": "MIT",
  "gaston": {
    "package": true
  },
  "vigour": {
    "plugin": {
      "android": {
        "className": "io.vigour.plugin.facebook.FacebookPlugin",
        "instantiation": "new FacebookPlugin(this)",
        "metadata": {
          "android:name": "com.facebook.sdk.ApplicationId",
          "android:value": "@string/facebook_app_id"},
        "activity": {
          "android:name": "com.facebook.FacebookActivity",
          "android:configChanges": "keyboard|keyboardHidden|screenLayout|screenSize|orientation",
          "android:theme": "@android:style/Theme.Translucent.NoTitleBar",
          "android:label": "@string/app_name"},
        "strings": {
          "facebook_app_id": "1523994961255055"
        }
      }
    },
    "native": {
      "platforms": {
        "ios": {
          "productName": "Facebook Example",
          "organizationName": "Vigour",
          "organizationIdentifier": "io.vigour.facebook",
          "buildNumber": "1",
          "appIndexPath": "build.html",
          "NSAllowsArbitraryLoads": true,
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true
          }
        },
        "android": {
          "productName": "Facebook Example",
          "applicationId": "io.vigour.facebook",
          "appIndexPath": "build.html",
          "keystoreFile": "example.keystore",
          "keystorePassword": "shmexample",
          "keystoreAlias": "blabla",
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true
          }
        }
      }
    }
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "expect",
      "before",
      "after",
      "beforeEach",
      "afterEach",
      "sinon",
      "FB"
    ]
  }
}
