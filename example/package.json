{
  "name": "vigour-facebook-example",
  "scripts": {
    "build": "../node_modules/.bin/gaston build -s ./index.js -o . -i",
    "ios": "npm run build && wrapper build --native.selectedPlatforms ios",
    "android": "npm run build && wrapper build --native.selectedPlatforms android",
    "all": "npm run build && wrapper build"
  },
  "gaston": {
    "package": true
  },
  "vigour": {
    "plugins": {
      "vigour-facebook": {
        "appId": "1523994961255055",
        "scope": "public_profile,email",
        "web": {
          "version": "v2.5",
          "src": "//connect.facebook.net/en_NL/sdk.js"
        }
      }
    },
    "native": {
      "debug": true,
      "platforms": {
        "ios": {
          "productName": "Facebook Example",
          "organizationName": "Vigour",
          "organizationIdentifier": "io.vigour.facebook",
          "buildNumber": "1",
          "appIndexPath": "build.html",
          "NSAllowsArbitraryLoads": true,
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true
          }
        },
        "android": {
          "productName": "Facebook Example",
          "applicationId": "io.vigour.facebook",
          "appIndexPath": "build.html",
          "keystoreFile": "example.keystore",
          "keystorePassword": "shmexample",
          "keystoreAlias": "blabla",
          "assets": {
            "build.html": true,
            "build.js": true,
            "build.css": true
          }
        }
      }
    }
  }
}
