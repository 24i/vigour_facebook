{
  "name": "vigour-facebook",
  "version": "4.0.1",
  "description": "facebook for vigorous apps!",
  "main": "lib/index.js",
  "scripts": {
    "test": "node test | tap-difflet && standard",
    "standard": "standard",
    "watch": "nodemon test | tap-difflet",
    "cover": "istanbul cover --report none --print detail test/index.js",
    "docs": "vdoc",
    "travis": "npm run cover -s && istanbul report lcov && ((cat coverage/lcov.info | coveralls) || exit 0) && standard"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vigour-io/facebook.git"
  },
  "keywords": [
    "vigour",
    "facebook",
    "web"
  ],
  "author": "Vigour",
  "contributors": [
    "Shawn Inder <shawn@vigour.io>",
    "Marcus Besjes <marcus@vigour.io>"
  ],
  "bugs": {
    "url": "https://github.com/vigour-io/facebook/issues"
  },
  "homepage": "https://github.com/vigour-io/facebook",
  "engines": {
    "node": ">=4.1.2"
  },
  "dependencies": {
    "babelify": "^7.3.0",
    "babel-preset-es2015": "^6.6.0",
    "vigour-observable": "^3.0.3",
    "vigour-ua": "^2.0.0",
    "envify": "^3.4.0"
  },
  "devDependencies": {
    "standard": "^7.0.1",
    "tap-difflet": "0.4.0",
    "tape": "4.4.0",
    "nodemon": "^1.9.1",
    "coveralls": "^2.11.9",
    "istanbul": "^0.4.3",
    "vigour-doc": "^1.0.5",
    "pre-commit": "^1.1.3"
  },
  "license": "MIT",
  "browserify": {
    "transform": [
      [
        "envify",
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "standard": {
    "globals": [
      "FB",
      "facebookConnectPlugin"
    ]
  }
}
